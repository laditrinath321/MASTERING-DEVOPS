sudo cat /var/lib/jenkins/secrets/initialAdminPassword

====================

[ec2-user@master playbooks]$ cat jenkins_setup.yaml
---
- name: Install Jenkins using service module
  hosts: appservers
  become: yes

  tasks:
    - name: Update all packages
      yum:
        name: "*"
        state: latest

    - name: Add Jenkins repo
      get_url:
        url: https://pkg.jenkins.io/redhat-stable/jenkins.repo
        dest: /etc/yum.repos.d/jenkins.repo

    - name: Import Jenkins GPG key
      rpm_key:
        key: https://pkg.jenkins.io/redhat-stable/jenkins.io-2023.key
        state: present

    - name: Upgrade all packages
      yum:
        name: "*"
        state: latest

    - name: Install Java 17 (Amazon Corretto)
      dnf:
        name: java-17-amazon-corretto
        state: present

    - name: Install Jenkins
      yum:
        name: jenkins
        state: present

    - name: Enable Jenkins service
      service:
        name: jenkins
        enabled: yes

    - name: Start Jenkins service
      service:
        name: jenkins
        state: started

    - name: Get Jenkins initial admin password
      command: cat /var/lib/jenkins/secrets/initialAdminPassword
      register: jenkins_password
      changed_when: false

    - name: Display Jenkins initial admin password
      debug:
        msg: "Jenkins initial admin password is: {{ jenkins_password.stdout }}"

[ec2-user@master playbooks]$

